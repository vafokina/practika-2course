<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – DeliveryService WebDBServer</title>
    @Styles.Render("~/Content/css")
    <link type="text/css" rel="stylesheet" href="../../Content/Site.css" />
    @Scripts.Render("~/bundles/modernizr")
    @*@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/scripts/validate.min.js")*@
</head>
<body>
    @if (null != TempData["alertMessage"])
    {
        <script type="text/javascript">
       alert("@TempData["alertMessage"]");
        </script>
    }
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DeliveryService WebDBServer", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                    <li>@Html.ActionLink("Помощь", "Help", "Home")</li>
                    <li>@Html.ActionLink("Настройки", "Settings", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (!Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Войти", "Login", "Account")</li> }
                    else
                    {
                        <li>@Html.ActionLink("Выйти", "Logoff", "Account")</li>}
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="bottom">
            <p>&copy; @DateTime.Now.ToShortDateString() – DeliveryService WebDBServer</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
